<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Tipo"
        android:id="@+id/typeHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Nome"
        android:id="@+id/nameHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeHotel"/>

    <TextView
        android:text="Chain Code"
        android:id="@+id/chainCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeHotel"
        android:layout_toEndOf="@+id/nameHotel"
        android:layout_toRightOf="@+id/nameHotel" />


</RelativeLayout>